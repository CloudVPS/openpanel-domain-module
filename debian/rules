#!/usr/bin/make -f

install:
	dh_testdir
	dh_testroot
	dh_installdirs
	install -m 755 action debian/openpanel-mod-domain/var/opencore/modules/Domain.module/action
	cp module.xml *.html *.png debian/openpanel-mod-domain/var/opencore/modules/Domain.module/
	install -m 755 verify debian/openpanel-mod-domain/var/opencore/modules/Domain.module/verify

build:
	mkmodulexml < module.def > module.xml

binary-indep: build install

binary-arch: build install
	dh_installdocs -a
	dh_installdeb -a
	dh_compress -a
	dh_fixperms -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch

.PHONY: build binary binary-arch binary-indep clean install
